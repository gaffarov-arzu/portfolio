1)microk8s qurasdirilmasi
snap install microk8s --classic

2)sudo usermod -a -G microk8s $USER
sudo chown -f -R $USER ~/.kube
newgrp microk8s
3)microk8s status --wait-ready


1)pod yaml

apiVersion: v1
kind: Pod
metadata:
  name: nginx-demo
spec:
  containers:
    - name: nginx
      image: nginx:latest
      ports:
        - containerPort: 80


2)deployment.yml

apiVersion: apps/v1
kind: Deployment
metadata:
  name: web-app
spec:
   replicas: 3
   selector:
     matchLabels:
       app: web
   template:
     metadata:
       labels:
         app: web
     spec:
      containers:
       - name: nginx
         image: nginx:latest
         ports:
           - containerPort: 80
~
