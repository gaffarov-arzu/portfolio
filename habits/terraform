terraform ile bucket yaratmaq
1) vim main.tf
provider "aws" {
  region = "us-east-1"
}

resource "aws_s3_bucket" "example" {
  bucket = "benim-ilk-bucket-12345"
  acl    = "private"
}
2)terraform init
3)terraform apply

terraform ec2 yaratmaq
1)vim main.tf
provider "aws" {
region = "eu-central-1"
}

resource "aws_instance" "web" {
ami = "ami-0699c78c4486e5f1e"
instance_type = "t2.micro"
}
2)terraform plan
terraform apply
